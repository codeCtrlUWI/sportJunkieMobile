<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/author_related_articles_card_view"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/md_keylines"
                                    android:layout_marginLeft="@dimen/md_keylines"
                                    android:layout_marginRight="@dimen/md_keylines"
                                    android:foreground="?attr/selectableItemBackground"
                                    app:cardCornerRadius="15dp"
                                    app:cardElevation="12dp"
                                    app:layout_collapseMode="parallax">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/related_card_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image_for_article"
            android:scaleType="centerCrop"
            tools:src="@drawable/a"/>

        <TextView
            android:id="@+id/related_card_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_alignBottom="@id/related_card_image"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginStart="@dimen/md_keylines"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/whitetitey"
            android:textSize="18sp"
            tools:text="Category"/>

        <TextView
            android:id="@+id/related_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/related_card_image"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>